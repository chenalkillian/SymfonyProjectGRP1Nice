        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        color: #4CAF50;
    }

    form {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        border: 2px solid #4CAF50;
        border-radius: 5px;
